{
  "buildCommand": "npm run deploy && npm run build",
  "rewrites": [
    {
      "source": "/api/storage/:id",
      "destination": "https://:id.convex.cloud/storage/:id"
    }
  ],
  "headers": [
    {
      "source": "/videos/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" },
        { "key": "Accept-Ranges", "value": "bytes" }
      ]
    }
  ]
}
